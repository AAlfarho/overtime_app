<div>
  <h2><%= @post.rationale %></h2>
</div>

<div class="well">
  <div>
    <h3><span>Hours worked:</span> <%= @post.overtime_hours %></h3>
  </div>

  <div>
    <h3><span>Employee:</span> <%= @post.user.full_name %></h3>
  </div>

  <div>
    <h3><span>Date:</span> <%= @post.date %></h3>
  </div>

  <div>
    <h3><span>Current Stage of Approval:</span> <%= @post.status %></h3>
  </div>
</div>

<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-primary' if policy(@post).update? %>
<%= link_to 'Delete', post_path(@post), id: "delete_post_#{@post.id}", method: :delete, data: {confirm: 'Are you sure?', class: 'btn btn-danger'}, class: 'btn btn-danger' if policy(@post).destroy? %>