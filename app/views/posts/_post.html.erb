<tr>
  <td>
    <%= post.id %>
  </td>
  <td>
    <%= post.date %>
  </td>
  <td>
    <%= truncate(post.rationale) %>
  </td>
  <td>
    <%= post.user.full_name %>
  </td>
  <td>
    <%= status_label(post.status)%>
  </td>
  <td>
    <%if policy(post).update?%>
        <%= link_to 'Edit', edit_post_path(post), id: "edit_post_#{post.id}" %> |
        <%= link_to 'Delete', post_path(post), id: "delete_post_#{post.id}", method: :delete, data: {confirm: 'Are you sure?', class: 'btn btn-mini btn-danger'}%>
    <% end %>
  </td>
</tr>