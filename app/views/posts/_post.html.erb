<tr>
  <td>
    <%= post.date %>
  </td>
  <td>
    <%= post.overtime_hours %>
  </td>
  <td>
    <%= post.user.full_name %>
  </td>
  <td>
    <%= link_to truncate(post.rationale), post %>
  </td>
  <td>
    <%= status_label(post.status)%>
  </td>
  <td>
    <%if policy(post).update?%>
        <%= link_to '', edit_post_path(post), id: "edit_post_#{post.id}", class: 'glyphicon glyphicon-pencil index-icons' %>
    <% end %>
  </td>
  <td>
    <%if policy(post).destroy?%>
        <%= link_to '', post_path(post), id: "delete_post_#{post.id}", class: 'glyphicon glyphicon-trash index-icons', method: :delete, data: {confirm: 'Are you sure?', class: 'btn btn-mini btn-danger'}%>
    <% end %>
  </td>
</tr>